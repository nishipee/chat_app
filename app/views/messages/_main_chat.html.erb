<div class="chat_top">
  <div class="left_box">
    <div class="chat_name">
      <%= @room.name %>
    </div>
  </div>
  <div class="right_box">
    <div class="exit_chat">
      <%= link_to "チャットを終了する", room_path(@room.id), method: :delete %>
    </div>
  </div>
</div>
<div class="chat_messages">
  <%= render partial: "message", collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: "chat_bottom", local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, placeholder: "type a message", class: "type_box" %>
    <label class="image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "submit_btn" %>
<% end %>