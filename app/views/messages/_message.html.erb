<div class="messages">
  <div class="writer_info">
    <div class="writer">
      <%= message.user.name %>
    </div>
    <div class="written_date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="comments">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: "500x500"), class: "message-image" if message.image.attached? %>
  </div>
</div>


